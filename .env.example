# Configuration Cadok - Variables d'environnement
# ===================================================

# Base de données
MONGODB_URI=mongodb://localhost:27017/cadok
MONGO_AUTH_SOURCE=admin
MONGO_SSL=false
MONGO_SSL_VALIDATE=true

# Sécurité - Secrets JWT (REMPLACER PAR VOS PROPRES SECRETS)
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_minimum_32_chars
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_chars
API_KEY=your_api_key_here_minimum_32_chars

# Environnement
NODE_ENV=development
PORT=5000
LOG_LEVEL=debug

# CORS et Frontend
FRONTEND_URL=http://localhost:3000
SOCKET_CORS_ORIGIN=http://localhost:3000

# Services externes (optionnel)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

RESEND_API_KEY=

# Rate limiting (optionnel)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
