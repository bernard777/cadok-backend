{
  "name": "cadok-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:subscription": "cross-env NODE_ENV=test jest tests/subscription/",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit/",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration/",
    "test:api": "cross-env NODE_ENV=test jest tests/api/",
    "test:security": "cross-env NODE_ENV=test jest tests/security/",
    "test:services": "cross-env NODE_ENV=test jest tests/services/",
    "test:critical": "cross-env NODE_ENV=test jest tests/critical/",
    "test:regression": "cross-env NODE_ENV=test jest tests/regression/",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:api",
    "test:quick": "cross-env NODE_ENV=test jest tests/critical/ tests/regression/",
    "test:full": "npm run test:all && npm run test:security && npm run test:services",
    "test:pre-commit": "npm run test:quick && npm run test:api",
    "test:backend": "npm run test:all",
    "test:performance": "cross-env NODE_ENV=test jest tests/performance/",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prebuild": "npm test",
    "build": "echo 'Backend build completed successfully'",
    "build:prod": "npm run test:all && npm run build"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "services/**/*.js",
      "middlewares/**/*.js",
      "models/**/*.js",
      "controllers/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      },
      "./services/": {
        "functions": 95,
        "lines": 95
      },
      "./routes/": {
        "functions": 90,
        "lines": 90
      }
    },
    "testTimeout": 30000,
    "verbose": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.4",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.1",
    "qrcode": "^1.5.4",
    "sanitize-html": "^2.17.0",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.0.0",
    "mongodb-memory-server": "^9.0.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.0",
    "@types/jest": "^29.0.0",
    "faker": "^6.6.6"
  }
}
